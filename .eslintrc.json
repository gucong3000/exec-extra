{
	"env": {
		"browser": false,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"standard"
	],
	"parserOptions": {
		"sourceType": "script",
		"ecmaVersion": 2017
	},
	"root": true,
	"rules": {
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-tabs": [
			"off"
		],
		"semi": [
			"error",
			"always",
			{
				"omitLastInOneLineBlock": false
			}
		],
		"strict": [
			"error"
		],
		"valid-jsdoc": [
			"warn",
			{
				"requireReturn": false
			}
		]
	},
	"overrides": [
		{
			"files": [
				"test/**/*"
			],
			"env": {
				"mocha": true
			}
		}
	]
}
